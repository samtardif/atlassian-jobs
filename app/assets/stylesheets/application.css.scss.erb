//= require normalize
//= require_self

@import 'bourbon';

html {
  background: #D6D6D6 url('<%= asset_path('careers-mock.png') %>') top center no-repeat;
}

#page {
  font: 14px/18px 'Helvetica Neue', Helvetica, Arial, sans-serif;
  text-align: center;

  margin: 40px auto;
  background: white;
  border: 1px solid darken(white, 5%);

  position: fixed;
  top: 50%; margin-top: -(72px / 2);
  left: 50%; margin-left: -(240px - (24px * 2)) / 2;
  padding: 24px;
  width: 240px - (24px * 2);

  @include box-shadow(0 3px 12px rgba(0,0,0,0.4));
  border: 1px solid #CCC;
}

$width: 540px;

#jobs-app {
  font: 14px/18px 'Helvetica Neue', Helvetica, Arial, sans-serif;

  .shadow {
    position: fixed;
    top: 0; right: 0; bottom: 0; left: 0;
    background: rgba(black, 0.4);
  }

  .letter {
    position: fixed;
    width: $width;
    margin-top: 24px;
    margin-left: -$width / 2;
    top: 0; bottom: 0; left: 50%;
    padding: 24px 48px;

    background: white url('<%= asset_path('letterhead.png') %>') top repeat-x;
    @include border-radius(3px 3px 0 0);
    @include box-shadow(0 0 12px rgba(black, 0.4));

    .viewport {
      width: 100%;
      height: 100%;
      overflow-y: auto;
    }
  }

  .page {
    .formal-details {
      float: right;
      width: 200px;
    }

    div {
      margin-bottom: 24px;
    }

    input {
      display: block;
    }

    .site {
      border-top: 1px solid #CCC;
      padding-top: 6px;

      .remove {
        float: right;
        font-size: 12px;
      }

      .url {
        font-size: 18px;
        margin-bottom: 12px;

        input {
          font-size: 18px;
          display: inline;
        }
      }

      textarea.description {
        @include box-sizing(border-box);
        border: 1px solid #CCC;
        width: 100%;
        outline: none;
        resize: vertical;

        &:focus {
          border-color: blue;
        }
      }
    }

  }
}
