source :rubygems

gem 'thin'
gem 'rails', '3.1.0.rc6'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'bourbon'
  gem 'coffee-rails'
  gem 'backbone-rails'
  gem 'uglifier'
end

gem 'haml'
gem 'jquery-rails'

group :development do
  gem 'heroku'
  gem 'foreman'
end
