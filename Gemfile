  gem 'sass-rails'
  gem 'bourbon'
  gem 'coffee-rails'
  gem 'backbone-rails'
  gem 'uglifier'
end

gem 'haml'
gem 'jquery-rails'

group :development do
  gem 'heroku'
  gem 'foreman'
end

